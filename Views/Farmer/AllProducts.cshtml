<!--Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/views/overview?view=aspnetcore-9.0-->
@model AgriEnergyConnect.Models.Farmers.ProductListResultModel

@{
    ViewData["Title"] = "All Products";
}

<div class="container mt-3">
    <h1 class="text-center mb-3">All Products</h1>

    <div class="flex flex-row flex-wrap justify-center">
        @foreach (var p in Model.Products)
        {
            <div class="card farmer-card justify-center">
                <h2 class="mb-1">@p.ProductName</h2>
                <p class="text-muted mb-2">@p.Description</p>
                <p class="text-muted mb-2">@p.Type</p>
                <p class="text-muted mb-2">R @p.Price</p>
            </div>
        }
    </div>
</div>
