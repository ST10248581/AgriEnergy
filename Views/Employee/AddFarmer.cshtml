@model AgriEnergyConnect.Models.Authentication.RegisterRequestModel
@{
    ViewData["Title"] = "Add Farmer";
}
<div class="auth-container">
    <div class="card auth-card">
        <h1 class="text-center mb-2">Add Farmer</h1>
        <form method="post" action="/Employee/AddFarmer">
            <input type="text" name="name" placeholder="Full Name" required minlength="2" />

            <input type="email" name="email" placeholder="Email" required />

            <input type="password" name="password" placeholder="Password"
                   required minlength="6" pattern=".{6,}"
                   title="Password must be at least 6 characters" />

            <input type="password" name="confirmPassword" placeholder="Confirm Password"
                   required minlength="6" pattern=".{6,}"
                   title="Passwords must match and be at least 6 characters" />

            <button type="submit" class="btn w-full mt-2">Sign Up</button>
        </form>
    </div>
</div>
