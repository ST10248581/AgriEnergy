<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriEnergyConnect</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriEnergyConnect.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="page-wrapper">
        <header>
            <nav class="navbar">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AgriEnergyConnect</a>

                    <div class="navbar-links">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        <a class="nav-link" asp-area="" asp-controller="Authentication" asp-action="SignIn">Sign In</a>
                        <a class="nav-link" asp-area="" asp-controller="Authentication" asp-action="SignUp">Sign Up</a>
                        <a class="nav-link" asp-area="" asp-controller="Authentication" asp-action="SignOut">Sign Out</a>
                        <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="AddFarmer">Add Farmer</a>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="main-content">
                @RenderBody()
            </main>
        </div>

        <footer class="footer">
            <div class="container">
                &copy; 2025 - AgriEnergyConnect -
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
