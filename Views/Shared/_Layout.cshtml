<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriEnergyConnect</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriEnergyConnect.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="page-wrapper">
        <header>
            <nav class="navbar">
                <div class="container">
                    <div class="brand-container">
                        <img src="~/Images/Logo.png" alt="Sample Image" />
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AgriEnergyConnect</a>
                    </div>
                    <div class="navbar-links">
                        <a class="dropbtn" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="dropbtn" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

                        <!-- Authentication Dropdown -->
                        <div class="dropdown">
                            <button class="dropbtn">Authentication</button>
                            <div class="dropdown-content">
                                <a class="nav-link" asp-area="" asp-controller="Authentication" asp-action="SignIn">Sign In</a>
                                <a class="nav-link" asp-area="" asp-controller="Authentication" asp-action="SignUp">Sign Up</a>
                                <a class="nav-link" asp-area="" asp-controller="Authentication" asp-action="SignOut">Sign Out</a>
                            </div>
                        </div>

                        <!-- Employee Dropdown -->
                        <div class="dropdown">
                            <button class="dropbtn">Employee</button>
                            <div class="dropdown-content">
                                <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="AddFarmer">Add Farmer</a>
                                <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="GetFarmers">All Farmers</a>
                            </div>
                        </div>

                        <!-- Farmer Dropdown -->
                        <div class="dropdown">
                            <button class="dropbtn">Farmer</button>
                            <div class="dropdown-content">
                                <a class="nav-link" asp-area="" asp-controller="Farmer" asp-action="AddProduct">Add Product</a>
                                <a class="nav-link" asp-area="" asp-controller="Farmer" asp-action="GetAllProduct">All Product</a>
                            </div>
                        </div>
                    </div>

                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="main-content">
                @RenderBody()
            </main>
        </div>

        <footer class="footer">
            <div class="container">
                &copy; 2025 - AgriEnergyConnect -
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
